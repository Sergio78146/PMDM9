<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Título de Pedidos Pendientes -->
    <TextView
        android:id="@+id/textViewPedidosPendientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Pedido pendiente"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Contenedor para cada pedido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Tienda -->
        <TextView
            android:id="@+id/textViewTienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tienda: "
            android:textStyle="bold" />

        <!-- Nombre de la Tienda -->
        <TextView
            android:id="@+id/textViewNombreTiendaValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

        <!-- Importe -->
        <TextView
            android:id="@+id/textViewImporteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Importe: "
            android:textStyle="bold" />

        <!-- Importe del Pedido -->
        <TextView
            android:id="@+id/textViewImporteValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

        <!-- Fecha Estimada -->
        <TextView
            android:id="@+id/textViewFechaEstimadaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fecha Estimada: "
            android:textStyle="bold" />

        <!-- Fecha Estimada del Pedido -->
        <TextView
            android:id="@+id/textViewFechaEstimadaValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

        <!-- Estado -->

        <!-- Estado del Pedido -->

        <!-- Descripción -->
        <TextView
            android:id="@+id/textViewDescripcionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Descripción: "
            android:textStyle="bold" />

        <!-- Descripción del Pedido -->
        <TextView
            android:id="@+id/textViewDescripcionValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

        <!-- Divider or Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>
</LinearLayout>